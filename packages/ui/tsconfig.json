{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "composite": false,
    "declaration": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node16",
    "target": "ES2020",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "typeRoots": ["../../node_modules/@types", "../../apps/admin-web/node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "react": ["../../apps/admin-web/node_modules/react"],
      "react-dom": ["../../apps/admin-web/node_modules/react-dom"],
      "lucide-react": ["../../apps/admin-web/node_modules/lucide-react"],
      "@types/react": ["../../apps/admin-web/node_modules/@types/react"],
      "@types/react-dom": ["../../apps/admin-web/node_modules/@types/react-dom"]
    },
    "types": ["react", "react-dom"]
  },
  "include": ["src"]
}
